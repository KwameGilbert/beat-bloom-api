{
  "name": "express-backend-template",
  "version": "1.0.0",
  "description": "Production-ready Express.js backend template",
  "type": "module",
  "main": "src/server.js",
  "scripts": {
    "start": "pnpm run migrate && node src/server.js",
    "dev": "pnpm run migrate && nodemon src/server.js",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "test:auth": "node --experimental-vm-modules node_modules/jest/bin/jest.js --testPathPattern=auth",
    "test:users": "node --experimental-vm-modules node_modules/jest/bin/jest.js --testPathPattern=users",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write \"src/**/*.js\"",
    "migrate": "knex migrate:latest --knexfile src/config/knexfile.js",
    "migrate:rollback": "knex migrate:rollback --knexfile src/config/knexfile.js",
    "migrate:make": "knex migrate:make --knexfile src/config/knexfile.js",
    "seed": "knex seed:run --knexfile src/config/knexfile.js",
    "seed:make": "knex seed:make --knexfile src/config/knexfile.js",
    "db:reset": "pnpm run migrate:rollback && pnpm run migrate && pnpm run seed"
  },
  "keywords": [
    "express",
    "backend",
    "template",
    "api",
    "rest",
    "postgresql",
    "mysql",
    "knex",
    "jwt"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@otplib/preset-default": "^12.0.1",
    "bcrypt": "^6.0.0",
    "cloudinary": "^2.9.0",
    "compression": "^1.8.1",
    "cors": "^2.8.6",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "express-rate-limit": "^8.2.1",
    "express-slow-down": "^3.0.1",
    "helmet": "^8.1.0",
    "http-status-codes": "^2.3.0",
    "jsonwebtoken": "^9.0.3",
    "knex": "^3.1.0",
    "multer": "2.0.2",
    "mysql": "^2.18.1",
    "node-cron": "^4.2.1",
    "nodemailer": "^7.0.13",
    "otplib": "^13.2.1",
    "pg": "^8.18.0",
    "pino": "^10.3.0",
    "pino-http": "^11.0.0",
    "pino-pretty": "^13.1.3",
    "qrcode": "^1.5.4",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "eslint": "^9.39.2",
    "globals": "^17.0.0",
    "jest": "^30.2.0",
    "nodemon": "^3.1.11",
    "prettier": "^3.8.0",
    "supertest": "^7.2.2"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
