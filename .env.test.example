# ============================================
# TEST ENVIRONMENT CONFIGURATION
# ============================================
# Copy this file to .env.test and configure for your test database

# Application
APP_NAME=BeatBloom Test
API_VERSION=v1

# Server Configuration
NODE_ENV=test
PORT=3001
HOST=localhost

# Database Configuration - USE A SEPARATE TEST DATABASE!
DB_CLIENT=pg
# DATABASE_URL=postgresql://username:password@localhost:5432/beatbloom_test

DB_HOST=localhost
DB_PORT=5432
DB_NAME=beatbloom_test
DB_USER=postgres
DB_PASSWORD=
DB_POOL_MIN=1
DB_POOL_MAX=5

# JWT Configuration (use different secrets for testing)
JWT_SECRET=test-jwt-secret-key-must-be-at-least-32-characters-long-for-testing
JWT_EXPIRES_IN=1h
JWT_REFRESH_SECRET=test-jwt-refresh-secret-key-must-be-at-least-32-characters-long
JWT_REFRESH_EXPIRES_IN=7d

# Security Configuration
HASH_ALGORITHM=bcrypt
BCRYPT_ROUNDS=4  # Lower rounds for faster tests
HASH_KEY_LENGTH=64
HASH_SALT_LENGTH=16

# Rate Limiting - Disable for tests
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=1000

# Logging - Minimal for tests
LOG_LEVEL=error

# CORS
CORS_ORIGIN=*

# Upload Configuration
UPLOAD_STRATEGY=local
UPLOAD_LOCAL_PATH=test-uploads
UPLOAD_MAX_FILE_SIZE=5242880

# Email - Disable for tests
# EMAIL_HOST=
# EMAIL_USER=
